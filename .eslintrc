{
  "extends": [
    "eslint-config-airbnb",
    "plugin:es-beautifier/standard"
  ],
  "env": {
      "browser": true,
      "node": true,
      "mocha": true
  },
  "rules": {
    "camelcase": 0,
    "comma-dangle": 0,
    "id-length": 0,
    "import/default": 0,
    "import/named": 0,
    "import/namespace": 0,
    "import/no-duplicates": 0,
    "import/no-named-as-default": 2,
    "import/no-unresolved": 0,
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "max-len": ["error", 120],
    "no-alert": 0,
    "no-return-assign": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "no-mixed-operators": 0,
    "react/no-multi-comp": 0,
    "react/prop-types": [0],
    "semi": 0
  },
  "parser": "babel-eslint",
  "plugins": [
    "react", "import", "es-beautifier"
  ],
  "settings": {
    "import/parser": "babel-eslint",
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    }
  },
  "globals": {
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": true,
    "socket": true,
    "webpackIsomorphicTools": true
  }
}
